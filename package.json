{
  "name": "backend-node",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc --jsx react --project . ",
    "dev": "npm run build && node .dist/index.js",
    "start": "npm-watch dev",
    "start-production": "node .dist/index.js",
    "test": "husky install",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "prepare": "husky install",
    "prepush": "npm run  prepare",
    "precommit": "npm run lint-fix ",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "watch": {
    "dev": {
      "patterns": [
        "."
      ],
      "quiet": false,
      "legacyWatch": true,
      "extensions": "ts, js, tsx"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "precommit": "npm run lint-fix && pretty-quick --staged ",
      "prepush": "npm run lint"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "@types/express": "^4.17.14",
    "@types/sendmail": "^1.4.4",
    "apollo-server-express": "^3.10.3",
    "bcrypt": "^5.1.0",
    "compression": "^1.7.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "joi": "^17.6.4",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.40",
    "mongoose": "^6.7.0",
    "nanoid": "^3.3.6",
    "nodemailer": "^6.9.1",
    "nodemailer-sendgrid": "^1.0.3",
    "nodemon": "^2.0.20",
    "npm-watch": "^0.11.0",
    "sendmail": "^1.6.1",
    "shortid": "^2.2.16",
    "stripe": "^11.8.0",
    "winston": "^3.13.0",
    "winston-mongodb": "^5.1.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/shortid": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "husky": "^8.0.1",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.8.4"
  }
}
